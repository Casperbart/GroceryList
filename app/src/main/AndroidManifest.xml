<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.printz.guano.shoppingassistant">

    <permission android:name="com.printz.guano.shoppingassistant.provider.READWRITE" />
    <uses-permission android:name="com.printz.guano.shoppingassistant.provider.READWRITE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.Shopping">
        <activity
            android:name=".edit_list.ShoppingListActivity"
            android:label="@string/create_shoppinglist_label"
            android:theme="@style/Theme.Shopping"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".share_list.ShareActivity"
            android:label="@string/share_shoppinglist_label"
            android:parentActivityName=".edit_list.ShoppingListActivity"
            android:theme="@style/Theme.Shopping"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name=".edit_list.WareHistoryProvider"
            android:authorities="com.printz.guano.shoppingassistant.wareHistoryProvider"
            android:exported="true"
            android:readPermission="com.printz.guano.shoppingassistant.provider.READWRITE"
            android:writePermission="com.printz.guano.shoppingassistant.provider.READWRITE" />
        <provider
            android:name=".login.UserProvider"
            android:authorities="com.printz.guano.shoppingassistant.userProvider"
            android:exported="true"
            android:readPermission="com.printz.guano.shoppingassistant.provider.READWRITE"
            android:writePermission="com.printz.guano.shoppingassistant.provider.READWRITE" />
        <provider
            android:name=".edit_list.WareProvider"
            android:authorities="com.printz.guano.shoppingassistant.wareProvider"
            android:exported="true"
            android:readPermission="com.printz.guano.shoppingassistant.provider.READWRITE"
            android:writePermission="com.printz.guano.shoppingassistant.provider.READWRITE" />
        <provider
            android:name=".ShoppingListProvider"
            android:authorities="com.printz.guano.shoppingassistant.shoppingListProvider"
            android:exported="true"
            android:readPermission="com.printz.guano.shoppingassistant.provider.READWRITE"
            android:writePermission="com.printz.guano.shoppingassistant.provider.READWRITE" />
    </application>

</manifest>
